\ProvidesPackage{prettytex/math-theorems}
\RequirePackage{prettytex/boxes}
\RequirePackage{cleveref}

\newcommand{\thmnum}{section}
\DeclareOption{subsec}{
  \renewcommand{\thmnum}{subsection}
}
\DeclareOption{chapter}{
  \renewcommand{\thmnum}{chapter}
}
\DeclareOption{cleveref}{
  \crefname{figure}{figure}{figures}
  \crefname{equation}{equation}{equations}
}
\ProcessOptions\relax

\DeclareTranslation{English}{definitionname}{Definition}
\DeclareTranslation{German}{definitionname}{Definition}
\thmbox{definition}{\GetTranslation{definitionname}}{themecolor2}{def}{\thmnum}
\newcommand{\tcb@cnt@definitionautorefname}{\GetTranslation{definitionname}}

\DeclareTranslation{English}{theoremname}{Theorem}
\DeclareTranslation{German}{theoremname}{Satz}
\thmbox{theorem}{\GetTranslation{theoremname}}{themecolor}{thm}{\thmnum}
\newcommand{\tcb@cnt@theoremautorefname}{\GetTranslation{theoremname}}

\DeclareTranslation{English}{remarkname}{Remark}
\DeclareTranslation{German}{remarkname}{Bemerkung}
\thmbox{remark}{\GetTranslation{remarkname}}{yellow!30!orange}{remark}{\thmnum}
\newcommand{\tcb@cnt@remarkautorefname}{\GetTranslation{remarkname}}

\DeclareTranslation{English}{lemmaname}{Lemma}
\DeclareTranslation{German}{lemmaname}{Lemma}
\thmbox{lemma}{\GetTranslation{lemmaname}}{purple}{lemma}{\thmnum}
\newcommand{\tcb@cnt@lemmaautorefname}{\GetTranslation{lemmaname}}

\DeclareTranslation{English}{corollaryname}{Corollary}
\DeclareTranslation{German}{corollaryname}{Korollar}
\thmbox{corollary}{\GetTranslation{corollaryname}}{orange}{corollary}{\thmnum}
\newcommand{\tcb@cnt@corollaryautorefname}{\GetTranslation{corollaryname}}

\makeatletter
\@ifpackageloaded{cleveref}{\crefname{tcb@cnt@definition}{definition}{definitions}
  \Crefname{tcb@cnt@definition}{Definition}{Definitions}
  \crefname{tcb@cnt@theorem}{theorem}{theorems}
  \Crefname{tcb@cnt@theorem}{Theorem}{Theorems}
  \crefname{tcb@cnt@lemma}{lemma}{lemmata}
  \Crefname{tcb@cnt@lemma}{Lemma}{Lemmata}
  \crefname{tcb@cnt@corollary}{corollary}{corollaries}
  \Crefname{tcb@cnt@corollary}{Corollary}{Corollaries}}{}
\makeatother
