\ProvidesPackage{math}

%----------------------------------------------------------------------------------------------------------------------
% vectors
%----------------------------------------------------------------------------------------------------------------------
\newcommand*\pvec[2]{\begin{bmatrix}#1\\#2\end{bmatrix}}      % 2x1 column-vector
\newcommand*\tvec[3]{\begin{bmatrix}#1\\#2\\#3\end{bmatrix}}  % 3x1 column vector
\newcommand*\dotp[2]{\big\langle#1,#2\big\rangle}             % dot-product with arguemnts

%----------------------------------------------------------------------------------------------------------------------
% matrices
%----------------------------------------------------------------------------------------------------------------------
\newcommand*\mat[1]{\mathbf{#1}}                              % write matrix-variable in bold
\newcommand*\Rang{\mathrm{Rang}}                              % rank of a matrix (german)
\newcommand*\Rank{\mathrm{Rank}}                              % rank of a matrix (english)
\newcommand*\Spur{\mathrm{Spur}}                              % trace of a matrix (german)
\newcommand*\Trace{\mathrm{Trace}}                            % trace of a matrix (english)
\renewcommand{\det}{\mathrm{det}}                             % determinant of a matrix
\newcommand*\Adj{\mathrm{Adj}}                                % adjunct matrix
\newcommand*\Cof{\mathrm{Cof}}                                % cofactor matrix
\newcommand*\imate{\mat{E}}                                   % identity matrix (german)
\newcommand*\imati{\mat{I}}                                   % identity matrix (english)

%----------------------------------------------------------------------------------------------------------------------
% calculus
%----------------------------------------------------------------------------------------------------------------------
\newcommand*\diff{\mathrm{d}}                                 % differential d
\newcommand*\Arsinh{\mathrm{Arsinh}}                          % Area sinus hyperbolicus
\newcommand*\Arcosh{\mathrm{Arcosh}}                          % Area cosinus hyperbolicus
\newcommand*\Artanh{\mathrm{Artanh}}                          % Area tangens hyperbolicus
\newcommand*\Arcoth{\mathrm{Arcoth}}                          % Area cotangens hyperbolicus
\newcommand*\arccot{\mathrm{arccot}}                          % Arcus Cotangens
\newcommand*\lims{\mathrm{lim}}                               % limes
\newcommand*\sups{\mathrm{sup}}                               % supremum
\newcommand*\infs{\mathrm{inf}}                               % infimum
\newcommand*\limsups{\lims\:\sups}                            % limes superior
\newcommand*\liminfs{\lims\:\infs}                            % limes inferior
\renewcommand{\lim}[2]{\underset{#1\subj #2}{\lims}}          % limit with arguments
\renewcommand{\limsup}[2]{\underset{#1\subj #2}{\limsups\;}}  % limes superior with arguments
\renewcommand{\liminf}[2]{\underset{#1\subj #2}{\liminfs\;}}  % limes inferior with arguments
\renewcommand{\sup}[1]{\sups\big(#1\big)}                     % supremum with argument
\renewcommand{\inf}[1]{\infs\big(#1\big)}                     % infimum with argument
\newcommand*\Bild{\mathrm{Bild}}                              % image of a function (german)
\newcommand*\Img{\mathrm{Img}}                                % image of a function (english)
\newcommand*\der[2]{\frac{\diff #1}{\diff #2}}                % derivative
\newcommand*\per[2]{\frac{\partial#1}{\partial#2}}            % partial derivative
\newcommand*\ner[3]{\frac{\diff^{#3} #1}{\diff#2^{#3}}}       % n-th derivative
\newcommand*\pnr[3]{\frac{\partial^{#3}#1}{\partial#2^{#3}}}  % n-th partial derivative
\newcommand*\rot{\mathrm{rot}}                                % curl of vector field (german)
\newcommand*\curl{\mathrm{curl}}                              % curl of vector field (english)
\newcommand*\divs{\mathrm{div}}                               % divergence of vector field

%----------------------------------------------------------------------------------------------------------------------
% logic 
%----------------------------------------------------------------------------------------------------------------------
\newcommand*\bij{\leftrightarrow}                             % bijunction
\newcommand*\subj{\rightarrow}                                % subjunction ->
\newcommand*\lsubj{\leftarrow}                                % left subjunction <-
\newcommand*\nsubj{\cancel{\subj}}                      % not subjunction
\newcommand*\nlsubj{\cancel{\lsubj}}                      % not left subjunction
\newcommand*\eqv{\Leftrightarrow}                             % eqvivalent
\newcommand*\neqv{\cancel{\eqv}}                              % not equivalent
\renewcommand{\implies}{\Rightarrow}                          % implies (with shorter arrow)
\newcommand*\limplies{\Leftarrow}                             % left implies
\newcommand*\nimplies{\cancel{\implies}}                      % not implies
\newcommand*\nlimplies{\cancel{\limplies}}                    % not left implies
\newcommand*\dtrue{\mathrm{W}}                                % symbol for true (german)       
\newcommand*\dfalse{\mathrm{F}}                               % symbol for false (german)
\newcommand*\etrue{\mathrm{T}}                                % symbol for true (english)
\newcommand*\efalse{\mathrm{F}}                               % symbol for false (english)  

%----------------------------------------------------------------------------------------------------------------------
% equations
%----------------------------------------------------------------------------------------------------------------------
\newcommand*\feq{\overset{!}{=}}                              % should equal to

%----------------------------------------------------------------------------------------------------------------------
% constants
%----------------------------------------------------------------------------------------------------------------------
\renewcommand{\i}{\mathrm{i}}                                 % imaginary unit
\renewcommand{\j}{\mathrm{j}}                                 % jimaginary unit (electrical engineering)
\newcommand*\e{\mathrm{e}}                                    % euler's number

%----------------------------------------------------------------------------------------------------------------------
% number theory
%----------------------------------------------------------------------------------------------------------------------
\newcommand*\ggT{\mathrm{ggT}}                                % greatest common divisor (german)
\newcommand*\kgV{\mathrm{kgV}}                                % least commom multiple (german)
\renewcommand{\gcd}{\mathrm{gcd}}                             % greatest common divisor (english)
\newcommand*\lcm{\mathrm{lcm}}                                % least commom multiple (english)

%----------------------------------------------------------------------------------------------------------------------
% signal transforms
%----------------------------------------------------------------------------------------------------------------------
\newcommand*\ztr[1]{\tilde{#1}}                               % indication that #1 is a z-transform
\newcommand*\ltr[1]{\overline{#1}}                            % indication that #1 is a laplace-transform
\newcommand*\lap[1]{\mathcal{L}\big\{#1\big\}(s)}             % laplace transformation (with {}(s))
\newcommand*\zat[1]{\mathcal{Z}\big\{#1\big\}(z)}             % z transformation (with {}(z))
\newcommand*\izat[1]{\mathcal{Z}^{(-1)}\big\{#1\big\}}        % inverse z transformation
\newcommand*\ilap[1]{\mathcal{L}^{(-1)}\big\{#1\big\}}        % inverse laplace transformation
\newcommand*\ifat[1]{\mathcal{F}^{(-1)}\big\{#1\big\}}        % inverse fourier transformation
\newcommand*\frr{\overset{\mathrm{FR}}{\longleftrightarrow}}  % fourier series (german)
\newcommand*\frs{\overset{\mathrm{FS}}{\longleftrightarrow}}  % fourier series (english)
\newcommand*\frt{\overset{\mathrm{FT}}{\longleftrightarrow}}  % fourier transformation 
\newcommand*\fat[1]{\mathcal{F}\big\{#1\big\}(\omega)}        % alternative writing for Fourier-Transform
\newcommand*\dft{\overset{\mathrm{DFT}}{\longleftrightarrow}} % discrete fourier transform
\newcommand*\dtft{\overset{\mathrm{DTFT}}{\longleftrightarrow}} % discrete time fourier transform

%----------------------------------------------------------------------------------------------------------------------
% signal transform: special tikz symbols
%----------------------------------------------------------------------------------------------------------------------
\newcommand*\Ztransf{\begin{tikzpicture}[scale=0.6]           %
  \draw[white] (-0.1,0) rectangle (1.2,0.3);                  % 
  \draw[fill=black] (0,0) rectangle (0.3,0.3);                % symbol for inverse z transform (uses squares to
  \draw (0.3,0.15) -- (0.8,0.15);                             % indicate a discrete input)
  \draw[fill=white] (0.8,0) rectangle (1.1,0.3);              % 
\end{tikzpicture}}                                            %

\newcommand*\ztransf{\begin{tikzpicture}[scale=0.6]           %
  \draw[white] (-0.1,0) rectangle (1.2,0.3);                  % 
  \draw[fill=white] (0,0) rectangle (0.3,0.3);                % symbol for z transform (uses squares to indicate
  \draw (0.3,0.15) -- (0.8,0.15);                             % a discrete input)
  \draw[fill=black] (0.8,0) rectangle (1.1,0.3);              %
\end{tikzpicture}}                                            %

\newcommand*\Ltransf{\begin{tikzpicture}[scale=0.6]           %
  \draw[white] (-0.1,0) rectangle (1.2,0.3);                  %
  \draw[fill=black] (0,0) circle (0.15);                      % symbol for inverse laplace transform (uses circles to
  \draw (0.15,0) -- (0.8,0);                                  % indicate a continuous input)
  \draw[fill=white] (0.95,0) circle (0.15);                   %
\end{tikzpicture}}                                            %

\newcommand*\ltransf{\begin{tikzpicture}[scale=0.6]           %
  \draw[white] (-0.1,0) rectangle (1.2,0.3);                  %
  \draw[fill=white] (0,0) circle (0.15);                      % symbol for laplace transform (uses circles to indicate
  \draw (0.15,0) -- (0.8,0);                                  % a continuous input)
  \draw[fill=black] (0.95,0) circle (0.15);                   %
\end{tikzpicture}}                                            %

