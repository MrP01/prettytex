    tikzpicture,circuitikz,center,titlepage},
    keywords=[3]{relax,newcommand, renewcommand, maketitle,makeatletter,makeatother},
    keywords=[4]{col}
    sensitive=true,
    keywordstyle=[1]\color{blue},
    keywordstyle=[2]\color{red},
    keywordstyle=[3]\color{green},
    keywordstyle=[4]\color{red}
    morestring=[b]'
}
