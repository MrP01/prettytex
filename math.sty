\newcommand*{\longleadsto}[1]{
  \tikzexternaldisable
  \begin{tikzpicture}
    \draw [->, line join=round, decorate, decoration={
      zigzag,
      segment length=4,
      amplitude=.9,
      post=lineto,
      post length=2pt}] (0,0) -- (#1,0);
  \end{tikzpicture}
  \tikzexternalenable
}

\newcommand*\rtrf[1]{\overset{#1}{\longleadsto{1}}}
