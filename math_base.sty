\newcommand*{\longleadsto}[1]{
  \tikzexternaldisable
  \begin{tikzpicture}
    \draw [->, line join=round, decorate, decoration={
      zigzag,
      segment length=4,
      amplitude=.9,
      post=lineto,
      post length=2pt}] (0,0) -- (#1,0);
  \end{tikzpicture}
  \tikzexternalenable
}

